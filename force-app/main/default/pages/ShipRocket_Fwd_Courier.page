<apex:page standardController="Case" extensions="ForwardShipRocketApiCallout">
    <style>
    .buttonStyle { width:100%; background-color:green; text-align:center; padding-top:4px; }
    </style>
    
  <apex:form >
        <apex:outputText value="{!Phase2Text}" rendered="{!if(phase2 <> true,true,false)}" style="color:red"></apex:outputText>
       	   
        <apex:pageMessages /><br/>
      
      
                 
    <apex:commandButton action="{!CreateForwardOrder}" title="Create Forward Order" value="Forward Order" rendered="{!if(phase2 == true,isCreate,true)}" styleClass="buttonStyle" style="background:#ebebe0"/><br/>
   <apex:commandButton action="{!CheckForwardServicebility}" title="Create Forward Servicebility" value="Check Forward Servicebility" rendered="{!if(phase2 == true,isServicebility,false)}" styleClass="buttonStyle" style="background:#ebebe0"/><br/>
   <apex:commandButton action="{!FwdCreateAWB}" title="Create Forward Order" value="Generate AWB" rendered="{!if(phase2 == true,isAWB,false)}" styleClass="buttonStyle" style="background:#ebebe0"/><br/>
    <apex:commandButton action="{!FwdOrderTracking}" title="Track Forward Order" value="Track Through AWB" rendered="{!if(phase2 == true,isTracking,false)}" styleClass="buttonStyle" style="background:#ebebe0"/><br/>
    <apex:commandButton action="{!FwdPickup}" title="Create Return Order" value="Generate Pickup" rendered="{!if(phase2 == true,isPickup,false)}" styleClass="buttonStyle" style="background:#ebebe0"/><br/>
    <apex:commandButton action="{!Label}" title="Track Forward Order" value="GetLabel" rendered="{!if(phase2 == true,isLable,false)}" styleClass="buttonStyle" style="background:#ebebe0"/><br/>
   
    </apex:form>					

</apex:page>